<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path%></li>
    <li><%= link_to 'Inventory Types',inventory_types_path%></li>
    <li>Dashboard</li>
  </ul>
</div>

 <div class="col-md-12 section-top-15 wow fadeInDown" data-wow-duration="1s"
                             data-wow-delay="0.2s">
       <div class="panel panel-primary">
            <div class="panel-heading">Inventory Type Details
        </div>
 <div class="panel-body">
 <p id="notice"><%= notice %></p>
<%= link_to "Add New Inventory Type",new_inventory_type_path%>
 <div class="box-content" style="overflow-y: auto;height: 550px;width:100%">
<table class="table table-striped table-bordered responsive">
    <tr>
      <th><b>Name</b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_types.each do |inventory_type| %>
      <tr>
        <td><%= inventory_type.name %></td>
        <td><%= link_to 'Show', inventory_type, class: "btn btn-success btn-sm"%></td>
        <td><%= link_to 'Edit', edit_inventory_type_path(inventory_type), class: "btn btn-danger btn-sm" %></td>
        <td><%= link_to 'Destroy', inventory_type, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-warning btn-sm" %></td>
      </tr>
    <% end %>
                                 </tbody>
</table>
</div>
</div>
</div>