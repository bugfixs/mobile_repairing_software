<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Customer Details</h2>
      </div>
      <div class="box-content">
      <% if @customer_details.empty? %>
<h4 align="center">No Record Found </h4>
<% else %>
        <table id="datatable" class="table table-striped table-bordered responsive">
          <thead>
           <tr>
            <th>Customer Name</th>
            <th>Customer no</th>
            <th>Mobile no</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @customer_details.each_with_index do |user| %>
          <tr>
           <td> <%= user.customer_name %></td>
           <td> <%= user.customer_no %></td>
           <td> <%= user.mobile_no%></td>
           <td> <%= user.address%></td>
           <td><%=link_to "Edit Status", edit_status_customer_detail_path(user),class: "btn btn-warning btn-sm"%></td>
            
         </tr>

         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>
</div>

<% end %>

